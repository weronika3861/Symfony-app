{% extends 'base.html.twig' %}

{% block title %}Product category{% endblock %}

{% block body %}
    <h3 class="display-4">Product category</h3>

    <div class="col-md-4 mb-3">
        <a class="btn btn-secondary" href="{{ path('product_category_index') }}">List of product categories</a>
    </div>
    <div class="col-md-4 mb-3">
        <form method="post" action="{{ path('product_category_edit', {'id': product_category.id}) }}">
            <button class="btn btn-primary">Edit product category</button>
        </form>
    </div>
    <div class="col-md-4 mb-3">
        {{ include('product_category/_delete_form.html.twig') }}
    </div>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product_category.id }}</td>
        </tr>

        <tr>
            <th>Name</th>
            <td>{{ product_category.name }}</td>
        </tr>

        <tr>
            <th>Description</th>
            <td>{{ product_category.description }}</td>
        </tr>

        <tr>
            <th>Created at</th>
            <td>{{ product_category.createdAt ? product_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>

        <tr>
            <th>Updated at</th>
            <td>{{ product_category.updatedAt ? product_category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>

        <tr>
            <th>Products</th>
            <td>
                {% for product in products %}
                    <div class="row col-md-4 mb-3">
                        <a class="btn btn-secondary" style="margin-right: 4px;" href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>
                        <form method="post" action="{{ path('wishlist_add_product', {'id': product.id}) }}">
                            <button class="btn btn-primary">Add to wishlist</button>
                        </form>
                    </div>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
