<form method="post" action="{{ path('product_category_delete', {'id': product_category.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this product category?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product_category.id) }}">
    <button class="btn btn-primary">Delete product category</button>
</form>
