{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h3 class="display-4">Product</h3>

    <div class="col-md-4 mb-3">
        <a class="btn btn-primary" href="{{ path('product_index') }}">List of products</a>
    </div>
    <div class="col-md-4 mb-3">
        <a class="btn btn-primary" href="{{ path('product_edit', {'id': product.id}) }}">Edit product</a>
    </div>
    <div class="col-md-4 mb-3">
        {{ include('product/_delete_form.html.twig') }}
    </div>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>

        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>

        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>

        <tr>
            <th>Created at</th>
            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>

        <tr>
            <th>Updated at</th>
            <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
